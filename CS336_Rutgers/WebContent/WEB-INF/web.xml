<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">
    <display-name>CS336 EBay Project</display-name>

    <context-param>
        <!--Username-->
        <param-name>DBUSER</param-name>
        <param-value>cs336</param-value>
    </context-param>
    <context-param>
        <!--Password-->
        <param-name>DBPWD</param-name>
        <param-value>cs336_password</param-value>
    </context-param>
    <context-param>
        <!--URL-->
        <param-name>DBURL</param-name>
        <!--MySQL IP Address-->
        <param-value>jdbc:mysql://localhost:3306/BuyMe</param-value>
    </context-param>


    <listener>
        <listener-class>rutgers.cs336.listener.AppContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>rutgers.cs336.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>rutgers.cs336.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>rutgers.cs336.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!--
        <servlet>
            <servlet-name>LogoffServlet</servlet-name>
            <servlet-path>rutgers.cs336.servlet.LogoffServlet</servlet-path>
        </servlet>
        <servlet-mapping>
            <servlet-name>LogoffServlet</servlet-name>
            <url-pattern>/logoff</url-pattern>
        </servlet-mapping>
    -->
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>